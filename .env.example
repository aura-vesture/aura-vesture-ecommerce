# Application
NEXT_PUBLIC_APP_NAME=Aura Vesture
NEXT_PUBLIC_APP_URL=http://localhost:8000

# Database
DB_HOST=localhost
DB_NAME=aura_vesture
DB_USER=root
DB_PASS=
DB_PORT=3306

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@auravesture.com
SMTP_PASS=your-smtp-password
SMTP_FROM_EMAIL=noreply@auravesture.com
SMTP_FROM_NAME=Aura Vesture

# Security
JWT_SECRET=your-jwt-secret-key
SESSION_LIFETIME=86400
CSRF_TOKEN_LENGTH=32
PASSWORD_MIN_LENGTH=8

# File Upload
MAX_FILE_SIZE=5242880 # 5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Support
SUPPORT_EMAIL=support@auravesture.com
SECURITY_EMAIL=security@auravesture.com
SUPPORT_PHONE=+1234567890

# Error Reporting
LOG_ERRORS=true
ERROR_LOG_FILE=logs/error.log

# Development
DEBUG_MODE=false
DEVELOPMENT_MODE=false
